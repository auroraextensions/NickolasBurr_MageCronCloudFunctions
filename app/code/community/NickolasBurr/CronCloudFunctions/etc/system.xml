<config>
    <tabs>
        <nickolasburr module="croncloudfunctions" translate="label">
            <label>Nickolas Burr Extensions</label>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
        </nickolasburr>
    </tabs>

    <sections>
        <croncloudfunctions module="croncloudfunctions" translate="label">
            <class>separator-top</class>
            <label>Cron Cloud Functions</label>
            <tab>nickolasburr</tab>
            <frontend_type>text</frontend_type>
            <sort_order>700</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general module="croncloudfunctions" translate="label"><!-- General Settings -->
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <expanded>1</expanded>
                    <comment>
                        <![CDATA[
                        <style>
                            .columns .form-list td.version {
                                padding-left: 0px !important;
                            }
                        </style>
                        <table cellspacing="0" class="form-list">
                            <tbody>
                                <tr>
                                    <td class="label version">
                                        <label>Version</label>
                                    </td>
                                    <td class="value">1.0.0</td>
                                </tr>
                            </tbody>
                        </table>
                        ]]>
                    </comment>
                    <fields>
                        <enable_module translate="label"><!-- Enable Module -->
                            <label>Enable Cron Cloud Functions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable_module>
                        <gcp_project translate="label"><!-- GCP Project Name -->
                            <label>Google Cloud Platform Project</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <validate>required-entry</validate>
                            <comment>The name of the GCP project.</comment>
                            <depends>
                                <enable_module>1</enable_module>
                            </depends>
                        </gcp_project>
                        <cloud_functions_region translate="label"><!-- Cloud Functions Region -->
                            <label>Cloud Functions Region</label>
                            <frontend_type>select</frontend_type>
                            <source_model>croncloudfunctions/system_config_source_select_general_region</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>The Cloud Functions region.</comment>
                            <depends>
                                <enable_module>1</enable_module>
                            </depends>
                        </cloud_functions_region>
                    </fields>
                </general>
            </groups>
        </croncloudfunctions>
    </sections>
</config>
